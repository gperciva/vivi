
import os
Import('env')

env.Append(
  CPPPATH = [
#    "/usr/include/python2.6",
    "../src/",
  ],
  SWIGFLAGS=Split("-c++ -python -Isrc/"),
  LIBS=["artifastring", "monowav", "marsyas", "gsl", "gslcblas"],

### workaround for scons bug
  #LDMODULEPREFIX="_",
  #LDMODULESUFFIX=".so",
  #SHLIBPREFIX="_",
  #SHLIBSUFFIX=".so",
  #SHLIBPREFIX="",
  #SHLIBSUFFIX="",
)
### actual workaround for scons bug
env['LIBPREFIX']=""

#env.SharedLibrary(
#  target = '_ears.so',
#  source = (['ears.i', '../src/ears.cpp']),
#)


env.SharedLibrary(
  target = '_dynamics.so',
  source = (['dynamics.i', '../src/dynamics.cpp']),
)

env.SharedLibrary(
  target = '_actions_file.so',
  source = (['actions_file.i', '../src/actions_file.cpp']),
)

env.SharedLibrary(
  target = '_controller_params.so',
  source = (['controller_params.i', '../src/controller_params.cpp']),
)

# the \# means "top level directory"
env.SharedLibrary(
  target = '_vivi_controller.so',
  source = (['vivi_controller.i', '../src/vivi_controller.cpp']
		+ ['../src/ears.cpp', '../src/actions_file.cpp']
		+ ['../src/dynamics.cpp']
		+ ['../src/controller_params.cpp']),
)

# TODO: hard-coded python version again!
env.Install('$PREFIX/lib/python2.6/site-packages/', [
  '_vivi_controller.so',
  'vivi_controller.py',
])

